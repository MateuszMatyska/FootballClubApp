@model int
@{
    ViewData["Title"] = "AddEuropeLeague";
}

<h2>Dodaj rekord</h2>
<div class="row no-gutters">
    <div class="col-lg-12 col-md-12 col-sm-12">
        @using (Html.BeginForm())
        {
            @Html.Hidden("seasonId", Model)
            <div class="form-group">
                @Html.Label("Pozycja", "Pozycja", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Place")
            </div>
            <div class="form-group">
                @Html.Label("Klub", "Klub", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.ClubName")
            </div>
            <div class="form-group">
                @Html.Label("Ile meczy", "Ile meczy", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.MatchesAmount")
            </div>
            <div class="form-group">
                @Html.Label("Punkty", "Punkty", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Points")
            </div>
            <div class="form-group">
                @Html.Label("Wygrane", "Wygrane", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Wins")
            </div>
            <div class="form-group">
                @Html.Label("Remisy", "Remisy", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Draws")
            </div>
            <div class="form-group">
                @Html.Label("Przegrane", "Przegrane", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Loses")
            </div>

            <input type="submit" value="Dodaj" class="btn btn-primary btn-lg" />
        }
    </div>
</div>
