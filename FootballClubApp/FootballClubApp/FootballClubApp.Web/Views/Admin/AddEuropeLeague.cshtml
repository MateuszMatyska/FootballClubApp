@model int
@{
    ViewData["Title"] = "AddEuropeLeague";
}
<style>
    .black-font {
        color: black;
    }
</style>
<h2>Dodaj rekord</h2>
<div class="row no-gutters">
    <div class="col-lg-12 col-md-12 col-sm-12">
        @using (Html.BeginForm())
        {
            @Html.Hidden("seasonId", Model)
            <div class="form-group">
                @Html.Label("Pozycja", "Pozycja", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.Place", "", new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Klub", "Klub", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.ClubName", "", new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Ile meczy", "Ile meczy", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.MatchesAmount", "", new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Punkty", "Punkty", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.Points", "", new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Wygrane", "Wygrane", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.Wins", "", new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Remisy", "Remisy", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.Draws", "", new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Przegrane", "Przegrane", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.Loses", "", new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Nazwa Turnieju", "Nazwa Turnieju", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.NameOfCompetition", "", new { @class = "black-font" })
            </div>
            <input type="submit" value="Dodaj" class="btn btn-primary btn-lg" />
        }
    </div>
</div>
