@model int
@{
    ViewData["Title"] = "AddElimination";
}

<h2>Dodaj rekord</h2>
<div class="row no-gutters">
    <div class="col-lg-12 col-md-12 col-sm-12">
        @using (Html.BeginForm())
        {
            @Html.Hidden("seasonId", Model)
            <div class="form-group">
                @Html.Label("Klub", "Klub", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Team")
            </div>
            <div class="form-group">
                @Html.Label("Wynik gospodarzy", "Wynik gospodarzy", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.HomeResult")
            </div>
            <div class="form-group">
                @Html.Label("Wynik gosci", "Wynik gosci", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.AwayResult")
            </div>
            <div class="form-group">
                @Html.Label("Runda", "Runda", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Round")
            </div>
            <div class="form-group">
                @Html.Label("Nazwa Etapu", "Nazwa Etapu", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.NameOfStage")
            </div>
            <div class="form-group">
                @Html.Label("Nazwa Turnieju", "Nazwa Turnieju", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.NameOfCompetition")
            </div>

            <input type="submit" value="Dodaj" class="btn btn-primary btn-lg" />
        }
    </div>
</div>
