@model FootballClubApp.BLL.Entities.CountryLeague
@{
    ViewData["Title"] = "EditCountryLeague";
}
<h2>Edytuj rekord</h2>
<div class="row no-gutters">
    <div class="col-lg-12 col-md-12 col-sm-12">
        @using (Html.BeginForm())
        {
            @Html.Hidden("seasonId", Model)
            <div class="form-group">
                @Html.Label("Pozycja", "Pozycja", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Place",Model.Place)
            </div>
            <div class="form-group">
                @Html.Label("Klub", "Klub", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.ClubName",Model.ClubName)
            </div>
            <div class="form-group">
                @Html.Label("Ile meczy", "Ile meczy", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.MatchesAmount",Model.MatchesAmount)
            </div>
            <div class="form-group">
                @Html.Label("Punkty", "Punkty", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Points",Model.Points)
            </div>
            <div class="form-group">
                @Html.Label("Wygrane", "Wygrane", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Wins",Model.Wins)
            </div>
            <div class="form-group">
                @Html.Label("Remisy", "Remisy", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Draws",Model.Draws)
            </div>
            <div class="form-group">
                @Html.Label("Przegrane", "Przegrane", htmlAttributes: new { @class = "control-label col-md-4" })
                @Html.TextBox("obj.Loses",Model.Loses)
            </div>

            <input type="submit" value="Edytuj" class="btn btn-primary btn-lg" />
        }
    </div>
</div>

