@model FootballClubApp.BLL.Entities.CountryLeague
@{
    ViewData["Title"] = "EditCountryLeague";
}
<style>
    .black-font {
        color: black;
    }
</style>
<h2>Edytuj rekord</h2>
<div class="row no-gutters">
    <div class="col-lg-12 col-md-12 col-sm-12">
        @using (Html.BeginForm())
        {
            @Html.Hidden("seasonId", Model)
            <div class="form-group">
                @Html.Label("Pozycja", "Pozycja", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.Place",Model.Place, new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Klub", "Klub", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.ClubName",Model.ClubName, new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Ile meczy", "Ile meczy", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.MatchesAmount",Model.MatchesAmount, new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Punkty", "Punkty", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.Points",Model.Points, new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Wygrane", "Wygrane", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.Wins",Model.Wins, new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Remisy", "Remisy", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.Draws",Model.Draws, new { @class = "black-font" })
            </div>
            <div class="form-group">
                @Html.Label("Przegrane", "Przegrane", htmlAttributes: new { @class = "control-label col-md-8" })
                @Html.TextBox("obj.Loses",Model.Loses, new { @class = "black-font" })
            </div>

            <input type="submit" value="Edytuj" class="btn btn-primary btn-lg" />
        }
    </div>
</div>

