@using FootballClubApp.ViewModels.LeaguesViewModels.Base
@model IEnumerable<FootballClubApp.ViewModels.LeaguesViewModels.Base.EliminationBaseModel>
    @{
        ViewData["Title"] = "GetEuropeEliminations";
    }

    <div class="row no-gutters">
        <div class="col-lg-2 col-md-2"></div>
        <div class="col-lg-8 col-md-8 col-sm-12">
            <h2>Eliminacje i Play-Off</h2>

            @foreach (var res in Model)
            {
                <div class='col-lg-12 col-md-12 col-sm-12'>
                    <div class="col-lg-6 col-md-6 col-sm-12">@res.NameOfCompetition</div>
                    <div class="col-lg-6 col-md-6 col-sm-12">@res.NameOfStage</div>
                </div>
                <div class='col-lg-12 col-md-12 col-sm-12'> <div class='col-lg-3 col-md-3 col-sm-12'>Legia</div> <div class='col-lg-2 col-md-2 col-sm-5'>  @res.HomeResult  </div> <div class='col-lg-2 col-md-2 col-sm-12'>:</div> <div class='col-lg-2 col-md-2 col-sm-5'>  @res.AwayResult  </div> <div class='col-lg-3 col-md-3 col-sm-6'>  @res.Team  </div> </div>
                <div class='col-lg-12 col-md-12 col-sm-12'>
                    @Html.ActionLink("Edytuj", "EditElimination", "Admin", new { seasonId = res.SeasonId, id = res.Id }, new { @class = "btn btn-warning btn-lg" })
                    @Html.ActionLink("Usuń", "DeleteElimination", "Admin", new { seasonId = res.SeasonId, id = res.Id }, new { @class = "btn btn-danger btn-lg" })
                </div>
            }

            <div class="col-lg-4 col-md-4 col-sm-12">
                @Html.ActionLink("Dodaj", "AddElimination", "Admin", new { seasonId = Model.FirstOrDefault().SeasonId }, new { @class = "btn btn-primary btn-lg" })
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12">
                @Html.ActionLink("Wróć", "Index", "Admin", (object)null, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>
        <div class="col-lg-2 col-md-2"></div>
    </div>

